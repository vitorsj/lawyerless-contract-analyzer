# Development Dockerfile for Lawyerless Backend
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install system dependencies for PDF processing and other tools
RUN apt-get update && apt-get install -y \
    # PDF processing dependencies
    poppler-utils \
    tesseract-ocr \
    tesseract-ocr-por \
    # Development tools
    curl \
    vim \
    git \
    # Build dependencies
    gcc \
    g++ \
    make \
    # Cleanup
    && rm -rf /var/lib/apt/lists/*

# Create non-root user for security
RUN groupadd -r lawyerless && useradd -r -g lawyerless lawyerless

# Create necessary directories
RUN mkdir -p /app/uploads /app/temp /tmp && \
    chown -R lawyerless:lawyerless /app /tmp

# Copy requirements first for better Docker layer caching
COPY requirements.txt requirements-dev.txt ./

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements-dev.txt

# Copy application code
COPY . .

# Create startup script
RUN echo '#!/bin/bash\n\
set -e\n\
\n\
# Wait for dependencies\n\
echo "Waiting for Redis..."\n\
while ! nc -z redis 6379; do\n\
  sleep 0.1\n\
done\n\
echo "Redis is ready!"\n\
\n\
# Run database migrations if needed\n\
# python -m alembic upgrade head\n\
\n\
# Start the application with auto-reload\n\
echo "Starting Lawyerless Backend in development mode..."\n\
exec uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload --log-level debug\n\
' > /app/start-dev.sh && chmod +x /app/start-dev.sh

# Set ownership
RUN chown -R lawyerless:lawyerless /app

# Switch to non-root user
USER lawyerless

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Start command
CMD ["/app/start-dev.sh"]