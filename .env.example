# =============================================================================
# LAWYERLESS BACKEND CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# üîë LLM API CONFIGURATION
# =============================================================================

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT=120

# =============================================================================
# LM STUDIO CONFIGURATION (Local LLM Server)
# =============================================================================
# LM Studio runs locally - no API key required!

LM_STUDIO_MODEL=llama-3.1-8b-instruct
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_TIMEOUT=180

# =============================================================================
# PROVIDER SELECTION (openai | lm_studio)
# =============================================================================
LLM_PROVIDER=openai
LLM_MAX_RETRIES=3

# Legacy compatibility
LLM_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# üìÑ PDF PROCESSING SETTINGS
# =============================================================================
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_PDF_PAGES=50
PDF_CHUNK_SIZE=4000
PDF_CHUNK_OVERLAP=200

# =============================================================================
# üñ•Ô∏è SERVER CONFIGURATION
# =============================================================================
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
APP_ENV=development

# =============================================================================
# üåê CORS SETTINGS
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# =============================================================================
# üìä OPTIONAL SETTINGS
# =============================================================================
# Set to false in production
RELOAD=true

# Additional allowed file types (comma-separated)
ALLOWED_FILE_TYPES=["application/pdf"]

# Application metadata
APP_NAME=Lawyerless API
APP_VERSION=1.0.0